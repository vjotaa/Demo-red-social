= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|	
	=devise_error_messages!
	.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
		= f.email_field :email, autofucus: true, class: 'mdl-textfield__input dark-gray-text'
		= f.label :email, class: "mdl-textfield__label dark-gray-text"

	.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
		= f.password_field :password, autofucus: true, class: 'mdl-textfield__input dark-gray-text'
		= f.label :password, class: "mdl-textfield__label dark-gray-text"

	.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
		= f.password_field :password_confirmation, autofucus: true, class: 'mdl-textfield__input dark-gray-text'
		= f.label :password_confirmation, class: "mdl-textfield__label dark-gray-text"

	.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
		= f.text_field :username, autofucus: true, class: 'mdl-textfield__input dark-gray-text'
		= f.label :username, class: "mdl-textfield__label dark-gray-text"
	.margin-top
		.row.middle-xs
			.col-xs-12
				.box.text-right.margin-right
					=f.submit "Create account", class:"mdl-button mdl-js-button mdl-button--raised mdl-button--colored margin-bottom"
			.col-xs-12
				.box
					=link_to "I have already an account", new_user_session_path